<% layout("/layouts/boilerplate.ejs") %>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>User Name</th>
                    <th>College Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                <% allClient.forEach(client=> { %>
                    <tr>
                        <td>
                            <%= client.username %>
                        </td>
                        <td>
                            <%= client.college %>
                        </td>
                        <td>
                            <%= client.phone %>
                        </td>
                        <td>
                            <%= client.email %>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Pagination Controls -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <!-- Previous Button -->
            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                <a class="page-link" href="client?page=<%= currentPage - 1 %>&limit=15" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            <!-- Page Numbers -->
            <% for (let i=1; i <=totalPages; i++) { %>
                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                    <a class="page-link" href="client?page=<%= i %>&limit=15">
                        <%= i %>
                    </a>
                </li>
                <% } %>

                    <!-- Next Button -->
                    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                        <a class="page-link" href="client?page=<%= currentPage + 1 %>&limit=15" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
        </ul>
    </nav>