<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        Student Senior
    </title>
    <base href="/">
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#000000">
    <link rel="shortcut icon" href="/assets/image192.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
        integrity="sha512-Fo3rlrZj/kTc4FKdZF8olnWT5dsgn9W68m8qH2ZmOjXx3U6DHzKn6i5gK/AoAl9xUM5Yov1+smCJjHcgq3eYpA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        /* Sidebar styles */
        .sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: -250px;
            background-color: #343a40;
            transition: 0.3s;
            z-index: 1000;
        }

        /* Close button inside sidebar */
        .close-btn {
            font-size: 30px;
            cursor: pointer;
            position: absolute;
            top: 5px;
            right: 10px;
            color: #fff;
            /* White color for visibility */
            display: none;
            /* Hide by default */
        }

        .sidebar.active .close-btn {
            display: block;
            /* Show when sidebar is active */
        }

        .sidebar.active {
            left: 0;
        }

        /* Sidebar links */
        .nav-link {
            color: #ffffff;
        }

        .nav-link:hover {
            background-color: #495057;
        }

        .collapse .nav-link {
            padding-left: 30px;
        }

        /* Main content */
        .main-content {
            padding: 20px;
            transition: margin-left 0.3s;
        }

        /* Hamburger button */
        .hamburger {
            font-size: 30px;
            cursor: pointer;
            position: fixed;
            top: 10px;
            left: 10px;
            z-index: 1001;
            color: #343a40;
            transition: transform 0.3s;
        }

        /* Hide hamburger */
        .hamburger.hide {
            display: none;
        }

        /* Hide sidebar on larger screens */
        @media screen and (min-width: 768px) {
            .sidebar {
                left: 0;
                width: 250px;
            }

            .main-content {
                margin-left: 250px;
            }

            .hamburger {
                display: none;
            }
        }
    </style>
</head>

<body>
    <!-- Hamburger Menu -->
    <div class="hamburger" id="hamburger">&#9776;</div>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <!-- Close button inside sidebar -->
        <div class="close-btn" id="closeSidebar">&times;</div>
        <%- include('../includes/sidebar.ejs') %>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <%- include("../includes/flash.ejs") %>
            <%- body %>
    </div>

    <%- include('../includes/footer.ejs') %>

        <!-- Scripts -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
        <script>
            document.addEventListener('DOMContentLoaded', () => {
                const hamburger = document.getElementById('hamburger');
                const sidebar = document.getElementById('sidebar');
                const closeSidebar = document.getElementById('closeSidebar');

                // Toggle sidebar on hamburger click
                hamburger.addEventListener('click', () => {
                    sidebar.classList.toggle('active');
                    hamburger.classList.toggle('hide'); // Hide hamburger when sidebar is active
                });

                // Close sidebar on close button click
                closeSidebar.addEventListener('click', () => {
                    sidebar.classList.remove('active');
                    hamburger.classList.remove('hide'); // Show hamburger when sidebar is closed
                });
            });

        </script>
        <script>
            if ('serviceWorker' in navigator) {
                window.addEventListener('load', () => {
                    navigator.serviceWorker.register('/service-worker.js')
                        .then((registration) => {
                            console.log('Service Worker registered with scope:', registration.scope);
                        })
                        .catch((error) => {
                            console.log('Service Worker registration failed:', error);
                        });
                });
            }
        </script>
</body>

</html>