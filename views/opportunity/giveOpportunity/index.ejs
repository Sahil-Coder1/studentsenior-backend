<% layout("/layouts/boilerplate.ejs") %>

    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center my-4">
            <h1>All Give Opportunities</h1>
            <a href="/opportunity/giveopportunities/new" class="btn btn-primary">Add New </a>
        </div>

        <div class="row">
            <% allGiveOpportunities.forEach(giveopportunity=> { %>
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= giveopportunity.name %>
                            </h5>
                            <p class="card-text"><strong>College Name:</strong>
                                <%= giveopportunity.college.name %>
                            </p>
                            <p class="card-text"><strong>Whatsapp:</strong>
                                <%= giveopportunity.whatsapp %>
                            </p>
                            <p class="card-text"><strong>Status:</strong>
                                <%= giveopportunity.status ? 'Approved' : 'Pending' %>
                            </p>
                        </div>
                        <div class="card-footer text-center">
                            <a href="opportunity/giveopportunities/<%= giveopportunity._id %>"
                                class="btn btn-success btn-sm">View</a>
                            <form action="opportunity/giveopportunities/<%= giveopportunity._id %>?_method=DELETE"
                                method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>

        <% if (allGiveOpportunities.length===0) { %>
            <div class="col-12">
                <p class="text-center">No Give Opportunities available at the moment.</p>
            </div>
            <% } %>
    </div>