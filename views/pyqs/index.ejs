<% layout("/layouts/boilerplate.ejs") %>

    <div class="container mt-4">
        <h1 class="mb-4">Previous Year Questions</h1>
        <a href="/pyqs/new" class="btn btn-primary mb-3">Add New PYQ</a>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Subject Name</th>
                        <th>College Name</th>
                        <th>Semester</th>
                        <th>Year</th>
                        <th>Course</th>
                        <th>Exam Type</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="pyq-list">
                    <% pyqs.forEach(pyq=> { %>
                        <tr>
                            <td>
                                <%= pyq.subjectName %>
                            </td>
                            <td>
                                <%= pyq.college.name %>
                            </td>
                            <td>
                                <%= pyq.semester %>
                            </td>
                            <td>
                                <%= pyq.year %>
                            </td>
                            <td>
                                <%= pyq.course %>
                            </td>
                            <td>
                                <%= pyq.examType %>
                            </td>
                            <td>
                                <%= pyq.status %>
                            </td>
                            <td>
                                <a href="/pyqs/<%= pyq._id %>" class="btn btn-info btn-sm">View</a>
                                <form action="/pyqs/<%= pyq._id %>?_method=DELETE" method="POST"
                                    style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Pagination Controls -->
        <nav aria-label="PYQ pagination">
            <ul class="pagination justify-content-center flex-wrap">
                <% if (currentPage> 1) { %>
                    <li class="page-item">
                        <a class="page-link" href="pyqs?page=<%= currentPage - 1 %>">Previous</a>
                    </li>
                    <% } %>
                        <% for (let i=1; i <=totalPages; i++) { %>
                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                <a class="page-link" href="pyqs?page=<%= i %>">
                                    <%= i %>
                                </a>
                            </li>
                            <% } %>
                                <% if (currentPage < totalPages) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="pyqs?page=<%= currentPage + 1 %>">Next</a>
                                    </li>
                                    <% } %>
            </ul>
        </nav>
    </div>

    <!-- Custom CSS for mobile-friendly table with smaller font size -->
    <style>
        /* Reduce font size and padding for mobile */
        @media (max-width: 767px) {
            h1 {
                font-size: 1.25rem;
            }

            table {
                font-size: 0.85rem;
                /* Reduce table font size */
            }

            .table td,
            .table th {
                padding: 0.35rem;
                /* Reduce cell padding */
            }

            .btn {
                font-size: 0.75rem;
                /* Reduce button font size */
                padding: 0.25rem 0.5rem;
                /* Reduce button padding */
            }

            .pagination .page-link {
                font-size: 0.75rem;
                /* Reduce pagination link font size */
            }
        }

        /* Further adjustments for very small screens */
        @media (max-width: 480px) {
            table {
                font-size: 0.5rem;
                /* Further reduce table font size */
            }

            .table td,
            .table th {
                padding: 0.1rem;
                /* Further reduce cell padding */
            }

            .btn {
                font-size: 0.4rem;
                padding: 0.1rem 0.2rem;
            }

            .pagination .page-link {
                font-size: 0.4rem;
            }
        }
    </style>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Ensure newly added PYQ is shown at the top
            const pyqList = document.getElementById('pyq-list');
            if (pyqList.children.length > 0) {
                pyqList.insertBefore(pyqList.lastChild, pyqList.firstChild);
            }
        });
    </script>