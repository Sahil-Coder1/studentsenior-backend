<% layout("/layouts/boilerplate.ejs") %>

    <div class="container mt-4">
        <h1 class="mb-4">Previous Year Questions</h1>
        <a href="/pyqs/new" class="btn btn-primary mb-3">Add New
            PYQ</a>

        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Subject Name</th>
                    <th>College Name</th>
                    <th>Semester</th>
                    <th>Year</th>
                    <th>Course</th>
                    <th>Exam Type</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% pyqs.forEach(pyq=> { %>
                    <tr>
                        <td>
                            <%= pyq.subjectName %>
                        </td>
                        <td>
                            <%= pyq.college.name %>
                        </td>
                        <td>
                            <%= pyq.semester %>
                        </td>
                        <td>
                            <%= pyq.year %>
                        </td>
                        <td>
                            <%= pyq.course %>
                        </td>
                        <td>
                            <%= pyq.examType %>
                        </td>
                        <td>
                            <%= pyq.status %>
                        </td>
                        <td>
                            <a href="/pyqs/<%= pyq._id %> %>" class="btn btn-info btn-sm">View</a>
                            <form action="/pyqs/<%= pyq._id %>?_method=DELETE" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>